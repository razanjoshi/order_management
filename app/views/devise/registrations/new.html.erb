
<body id="bodyLogin">
  <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <div class="login100-form-title" style="background-image: url(../images/bg-01.jpg);">
            <span class="login100-form-title-1">
              Customer Registration
            </span>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "Enter username", class: "input100", type: "text"  %>
            </div>
          </div>

          <div class="field">
            <div class="wrap-input100 validate-input m-b-18" data-validate = "Password is required">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password", class: "input100", type: "text"  %>
            </div>
          </div>

          <div class="field">
            <div class="wrap-input100 validate-input m-b-18" data-validate = "Password is required">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "input100", type: "text"  %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "button login100-form-btn" %>
          </div>
          <% end %>

        <%= render "devise/shared/links" %>
</body>